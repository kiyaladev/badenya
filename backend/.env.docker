# Badenya Backend - Docker Environment Variables
# Copy this file to .env and fill in the values

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change_this_root_password_to_something_secure

# Application MongoDB User (less privileged)
MONGO_APP_USER=badenya
MONGO_APP_PASSWORD=change_this_app_password_to_something_secure

# JWT Secrets (generate with: openssl rand -hex 64)
JWT_SECRET=change_this_to_a_long_random_string_64_chars_minimum
JWT_REFRESH_SECRET=change_this_to_another_long_random_string_64_chars_minimum
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# AI Configuration (optional)
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration (optional - for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="your_firebase_private_key_with_newlines"

# Generate secrets with these commands:
# openssl rand -hex 64  # For JWT secrets
# openssl rand -base64 32  # For other secrets
